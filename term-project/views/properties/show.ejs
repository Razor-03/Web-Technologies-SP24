<%- layout("layouts/boilerplate") %>
<div class="flex flex-col h-full lg:flex-row">
    <div class="basis-3/5 details block lg:flex">
        <div class="flex flex-col h-full lg:flex-row">
            <div class="basis-3/5 details block lg:flex">
                <div class="lg:pr-24 flex flex-row justify-center gap-y-12 h-full">
                    <div class="basis-11/12">
                        <div className="bigImage basis-3/4">
                            <img src={images[0]} alt="slider-image" className="h-full w-full object-cover rounded-md" />
                        </div>
                        <div className="smallImages basis-1/4 flex flex-col gap-1 sm:gap-4">
                            <% property.img.slice(1).map((image, index)=> (
                                <img key={index} src={image} alt="slider-image"
                                    className="h-16 sm:h-24 object-cover w-full rounded-md" onClick={()=>
                                setImageIndex(index+1)} />
                                )) %>
                        </div>
                        <%- include("../partials/propertyInfo") %>
                    </div>
                </div>
            </div>
            <div class="basis-2/5 bg-[#f0ebd8] rounded-sm lg:mt-0 py-4">
                <div class="flex flex-col px-6 gap-y-12 h-full">
                    <%- include("../partials/propertyFeatures") %>
                </div>
            </div>
        </div>
    <div class="basis-2/5 bg-[#f0ebd8] rounded-sm lg:mt-0 py-4">
        <div class="flex flex-col px-6 gap-y-12 h-full">
            <%- include("../partials/propertyFeatures") %>
        </div>
    </div>
</div>