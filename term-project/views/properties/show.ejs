<%- layout("layouts/boilerplate") %>
    <div class="flex flex-col h-full lg:flex-row">
        <div class="basis-3/5 details block lg:flex">
            <div class="lg:pr-24 flex flex-row justify-center gap-y-12 h-full">
                <div class="basis-11/12">
                    <div class="flex w-full h-content gap-1 max-h-80 lg:gap-10">
                        <div class="bigImage basis-3/4">
                            <img src="<%= property.images[0] %>" alt="slider-image"
                                class="h-full w-full object-cover rounded-md" />
                        </div>
                        <div class="smallImages basis-1/4 flex flex-col gap-1 sm:gap-4">
                            <% property.images.slice(1).forEach(function(image) { %>
                                <img src="<%= image %>" alt="smallImage" class="h-16 sm:h-24 object-cover w-full rounded-md"/>
                            <% }) %>                            
                        </div>
                    </div>
                    <%- include("../partials/propertyInfo") %>
                </div>
                <!-- <div class="basis-1/5"></div> -->
            </div>
        </div>
        <div class="basis-2/5 bg-[#f0ebd8] rounded-sm lg:mt-0 py-4">
            <div class="flex flex-col px-6 gap-y-12 h-full">
                <%- include("../partials/propertyFeatures") %>
            </div>
        </div>
    </div>