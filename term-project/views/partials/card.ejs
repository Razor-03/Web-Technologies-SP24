<div class="flex flex-col gap-14">
    <% properties.map(p=> { %>
        <div class="flex gap-x-6 max-h-fit">
            <!-- <p class="text-4xl"></p> -->
            <div class="basis-2/5 max-h-72">
                <a href='/properties/<%= p._id %>' class="w-[500px] h-48">
                    <img src="<%= p.images[0].url %>" alt="" class="block w-full h-full object-cover rounded-md" />
                </a>
            </div>
            <div class="basis-3/5 flex flex-col justify-between gap-2">
                <h2
                    class="text-lg font-semibold text-[#253344] transition ease-linear duration-100 hover:text-[#0d1b2a] hover:translate-y-1">
                    <a href='/properties/<%= p._id %>'>
                        <%= p.title %>
                    </a>
                </h2>
                <p class="flex items-center gap-1 text-[#778da9]">
                    <IoLocationOutline />
                    <span class="">
                        <%= p.description %>
                    </span>
                </p>
                <p class="text-lg font-light p-1 px-2 bg-[#ffe6a7] rounded-md w-max">
                    <span>$ <%= p.price %></span>
                </p>
                <div class="flex justify-between gap-4">
                    <div class="flex text-sm gap-10">
                        <div class="flex items-center gap-2 bg-[#F5F5F5] rounded-md p-1">
                            <FaBed />
                            <span>
                                <%= p.bedroom %> bedroom
                            </span>
                        </div>
                        <div class="flex items-center gap-2 bg-[#F5F5F5] rounded-md p-1">
                            <FaBath />
                            <span>
                                <%= p.bathroom %> bathroom
                            </span>
                        </div>
                    </div>
                    <div class="flex gap-4">
                        <div class="border p-2 rounded-md hover:bg-[#ddd]">
                            <IoBookmarkOutline />
                        </div>
                        <div class="border p-2 rounded-md hover:bg-[#ddd]">
                            <BsChatLeftText />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
            <div class="flex justify-center mt-8">
                <% if (currentPage> 1) { %>
                    <a href="?page=<%= currentPage - 1 %>&limit=<%= limit %>"
                        class="px-3 py-2 mx-1 border rounded">Previous</a>
                    <% } %>

                        <% for (let i=1; i <=totalPages; i++) { %>
                            <a href="?page=<%= i %>&limit=<%= limit %>"
                                class="px-3 py-2 mx-1 border rounded <%= i === currentPage ? 'bg-gray-200' : '' %>">
                                <%= i %>
                            </a>
                            <% } %>

                                <% if (currentPage < totalPages) { %>
                                    <a href="?page=<%= currentPage + 1 %>&limit=<%= limit %>"
                                        class="px-3 py-2 mx-1 border rounded">Next</a>
                                    <% } %>
            </div>
</div>