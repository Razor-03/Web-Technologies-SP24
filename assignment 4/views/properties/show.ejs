<%- layout("layouts/boilerplate") %>
    <div class="max-w-[100%] md:max-w-[90%] xl:max-w-[90%] mx-auto px-[20px] flex flex-col h-full lg:flex-row">
        <div class="basis-3/5 details block lg:flex">
            <div class="lg:pr-24 flex flex-row justify-center gap-y-12 h-full">
                <div class="basis-11/12">
                    <%- include("../partials/flash") %>
                        
                        <div id="animation-carousel" class="relative w-full" data-carousel="static">
                            <div class="relative h-80 overflow-hidden rounded-lg md:h-96">
                                <% property.images.forEach((img, i)=> {%>
                                <div class="hidden duration-300 ease-linear" data-carousel-item>
                                    <img src="<%= img.url %>"
                                        class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2 object-cover"
                                        alt="...">
                                </div>
                                <% }) %>
                            </div>
                            <% if (property.images.length> 1) { %>
                            <button type="button"
                                class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
                                data-carousel-prev>
                                <span
                                    class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
                                    <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true"
                                        xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                            stroke-width="2" d="M5 1 1 5l4 4" />
                                    </svg>
                                    <span class="sr-only">Previous</span>
                                </span>
                            </button>
                            <button type="button"
                                class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
                                data-carousel-next>
                                <span
                                    class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
                                    <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true"
                                        xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                            stroke-width="2" d="m1 9 4-4-4-4" />
                                    </svg>
                                    <span class="sr-only">Next</span>
                                </span>
                            </button>
                            <% } %>
                        </div>

                        <%- include("../partials/propertyInfo") %>
                            <% if (user && property.author.equals(user._id)) {%>
                                <div class="flex gap-6 justify-end mt-10">
                                    <a href="/properties/<%= property._id %>/edit"
                                        class="text-white bg-[#1d2d44] py-1 px-2 rounded-md w-12 text-center">Edit</a>
                                    <form action="/properties/<%= property._id %>?_method=DELETE"
                                        class="inline bg-red-600 text-white py-1 px-2 rounded-md" method="post">
                                        <button class="">Delete</button>
                                    </form>
                                </div>
                                <% } %>
                </div>
                <!-- <div class="basis-1/5"></div> -->
            </div>
        </div>
        <div class="basis-2/5 bg-[#f0ebd8] rounded-sm lg:mt-0 py-4">
            <div class="flex flex-col px-6 gap-y-12 h-full">
                <%- include("../partials/propertyFeatures") %>
            </div>
        </div>
    </div>